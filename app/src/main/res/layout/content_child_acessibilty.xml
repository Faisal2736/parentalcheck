<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_yellow_900"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".uiActivities.ChildAcessibiltyActivity"
    tools:showIn="@layout/activity_child_acessibilty">

    <TextView
        android:id="@+id/txt_choose_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_top_margin"
        android:gravity="center"
        android:text="@string/almost_done"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/txt_heading_size" />


    <ImageView
        android:id="@+id/img_configure"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_choose_profile"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_acessibility" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_configure"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please disable all apps which have the \n Draw over other apps \n permission to be able to setup \nAcessibility  "
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/txt_sunheading_size" />

        <Button
            android:layout_width="@dimen/byn_default_width"
            android:layout_height="@dimen/btn_default_height"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/md_white_1000"
            android:text="@string/enable"
            android:textColor="@color/md_pink_A400" />

    </LinearLayout>


</RelativeLayout>